model User {
  id           String    @id @default(uuid())
  name         String
  email        String    @unique
  passwordHash String
  phone        String?
  role         UserRole  @default(USER)
  profileImage String?
  isVerified   Boolean   @default(false)
  isActive     Boolean   @default(true)
  addresses    Address[]
  orders       Order[]
  reviews      Review[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  @@map("users")
}



model Address {
  id         String   @id @default(uuid())
  userId     String
  label      String?
  name       String
  street     String
  city       String
  district   String
  postalCode String?
  country    String
  isDefault  Boolean  @default(false)
  user       User     @relation(fields: [userId], references: [id])
}